{
  "private": true,
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "jest && eslint packages",
    "fix": "eslint packages --fix",
    "bootstrap": "lerna bootstrap",
    "release": "lerna publish",
    "rules": "run-p rules:*",
    "rules:wopian": "eslint-find-rules packages/eslint-config-wopian/index.js --current",
    "rules:wopian-react": "eslint-find-rules packages/eslint-config-wopian-react/index.js --current",
    "rules:wopian-vue": "eslint-find-rules packages/eslint-config-wopian-vue/index.js --current"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "~4.17.0",
    "eslint-find-rules": "~3.1.1",
    "jest": "~22.1.4",
    "lerna": "~2.8.0",
    "yarn-run-all": "~3.1.1"
  },
  "peerDependencies": {
    "eslint": "^4.0.0"
  },
  "renovate": {
    "extends": [
      ":npm",
      ":preserveSemverRanges",
      ":combinePatchMinorReleases",
      ":renovatePrefix",
      ":semanticCommits",
      ":semanticCommitTypeAll(chore)",
      ":rebaseStalePrs",
      ":unpublishSafe",
      ":prNotPending",
      ":automergeDisabled",
      ":maintainLockFilesMonthly",
      ":ignoreUnstable",
      ":updateNotScheduled",
      ":label(dependencies)",
      ":timezone(Europe/London)",
      ":assignee(wopian)",
      "group:babelMonorepo",
      "group:jestMonorepo",
      "group:storybookMonorepo"
    ],
    "prTitle": "update {{depName}} to {{newVersion}}",
    "commitMessage": "update {{depName}} to {{newVersion}}"
  }
}
